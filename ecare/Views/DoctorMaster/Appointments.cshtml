@model IEnumerable<ecare.Models.Appointment>

@{
    ViewBag.Title = "Appointments";
    Layout = "~/Views/Shared/_DoctorLayoutPage.cshtml";
}

<h4>Appointments</h4>
<hr />
<p>
    @using (Html.BeginForm("Appointments", "DoctorMaster", FormMethod.Get))
    {
        <input type="text" name="search" />
        <input type="submit" value="Search" name="submit" />
    }
</p>
@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table id="myTable" class="table table-bordered table-sm table-hover">
    <tr class="bg-custom text-white thead-light">
        <th>
            @Html.DisplayNameFor(model => model.AppointmentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Problem)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Problem)
            </td>

            <td class="w-25">
                @Html.ActionLink("Edit", "EditAppointments", new { id = item.AppointmentId }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "DeletePatientAppointment", new { id = item.AppointmentId }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure to delete?');" })
                @Html.ActionLink("Checkup", "DoctorCheckUp", new { id = item.AppointmentId }, new { @class = "btn btn-info" })

            </td>
        </tr>
    }

</table>
