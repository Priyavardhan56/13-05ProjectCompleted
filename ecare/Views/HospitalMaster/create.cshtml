@model ecare.Models.Hospital

@{
    ViewBag.Title = "AddHospital";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";

    if (Session["Email"] != null)
    {
        ViewBag.id = @Session["Id"].ToString();
        ViewBag.EntryBy = @Session["Email"].ToString();

    }

}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {


        $("#EntryBy").hide();
        $("#HospitalId").hide();
        $("#eb").hide();
        $("#hi").hide();


    });
</script>

<div class="col-md-12">
    <h4>Add Hospital</h4>
    <hr />
    @using (Html.BeginForm("Create", "HospitalMaster", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>
                            Hospital Name
                        </label>
                        @Html.TextBoxFor(model => model.HospitalName, new { @class = "form-control", @placeholder = "Enter Name", @required = "" })
                        @Html.ValidationMessageFor(model => model.HospitalName, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="col-sm-1"></div>
                <div class="col-sm-3">
                    <div class="form-group">

                        <label>Hospital Address</label>
                        @Html.TextAreaFor(model => model.HospitalAddress, new { @class = "form-control", @placeholder = "Enter Address", @required = "" })
                        @Html.ValidationMessageFor(model => model.HospitalAddress, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="col-sm-1"></div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>
                            Hospital City
                        </label>
                        @Html.TextBoxFor(model => model.HospitalCity, new { @class = "form-control", @placeholder = "Enter City", @required = "" })
                        @Html.ValidationMessageFor(model => model.HospitalCity, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>
                            Hospital State
                        </label>
                        @Html.TextBoxFor(model => model.HospitalState, new { @class = "form-control", @placeholder = "Enter State", @required = "" })
                        @Html.ValidationMessageFor(model => model.HospitalState, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="col-sm-1"></div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>
                            Hospital Country
                        </label>
                        @Html.TextBoxFor(model => model.HospitalCountry, new { @class = "form-control", @placeholder = "Enter Country", @required = "" })
                        @Html.ValidationMessageFor(model => model.HospitalCountry, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="col-sm-1"></div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>
                            Hospital Phone
                        </label>
                        @*@Html.TextBoxFor(model => model.HospitalPhone, new { @class = "form-control", @type = "number", @maxlength = "10", @placeholder = "91+" ,@required=""})*@
                        @*<input class="form-control" id="HospitalPhone" maxlength="10" name="HospitalPhone" pattern="[6-9]{1}[0-9]{9}" required="" />*@
                        <input class="form-control" id="HospitalPhone" maxlength="10" name="HospitalPhone" pattern="[4-9]{1}[0-9]{9}" required="" placeholder="Enter Mobile Number" />
                        @Html.ValidationMessageFor(model => model.HospitalPhone, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>
                            Hospital Email
                        </label>
                        @Html.TextBoxFor(model => model.HospitalEmail, new { @class = "form-control", @type = "email", @placeholder = "Enter Email", @required = "" })
                        @Html.ValidationMessageFor(model => model.HospitalEmail, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="col-sm-1"></div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>
                            Hospital Logo
                        </label>
                        @Html.TextBox("HospitalLogo", "", new { @type = "file", @id = "FileButton", @name = "FileButton" })
                        @Html.ValidationMessageFor(model => model.HospitalLogo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-sm-1"></div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>Is hospital Active?</label>

                        <div class="custom-checkbox">
                            @Html.EditorFor(model => model.IsActive) Yes

                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label id="eb">Entry By </label>
                <div class="col-md-10">
                    @Html.TextBox("EntryBy", (string)ViewBag.EntryBy, new { @class = "form-control", @name = "EntryBy" })

                </div>
            </div>




            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-custom " />
                </div>
            </div>
        </div>

    }

</div>



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

@if (ViewBag.SuccessMessage != null)
{
    <script type="text/javascript">
        $(function () {

            swal("Great!", "Hospital Successfully added", "success");
        });
    </script>
}
else if (ViewBag.ErrorMessage != null)
{

    <script type="text/javascript">
        $(function () {

            swal("Error", "Sorry, There is problem saving data", "error");
        });
    </script>
}




